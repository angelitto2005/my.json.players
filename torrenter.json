{
    "name"              : "Torrenter",
    "plugin"            : "plugin.video.torrenter",
    "priority"          : 200,
    "assert"            : {
                            "play_movie":       ["title", "year"],
                            "play_episode":     ["showname", "season", "episode"],
                            "search_movie":     ["title"],
                            "search_episode":   ["showname"]
                          },
    "search_movie"      : "plugin://plugin.video.torrenter/?action=search&url={title}",
    "search_episode"    : "plugin://plugin.video.torrenter/?action=search&url={name}"
}